<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="/css/global.css">
    <meta content="width=device-width,initial-scale=1.0" name="viewport">
  </head>
  
  <body>
    <div class="content">
	  <div class="post">
		<div class="post_header">
		  <h2 class="title">{{title}}</h2>
		  <div class="sub">
			<span class="user_attribution">by <a href="/{{userid}}">{{user}}</a></span>
			<span>//</span>
			<span class="post_stats">
			  <a href="#">{{comments}}</a> · 
			  <a href="#">{{likes}}</a> <a><span class="likes"></span></a> · 
			  <a href="#">{{time}}</a>
			</span>
		  </div>
		</div>
		<div class="post_stage">
		  {{#each items}}
			<div class="marker" x="{{x}}" y="{{y}}">
			  {{@index}}
			</div>
		  {{/each}}
		  <img class="post_img" src="{{img}}">
		</div>
		<div class="post_caption">
		  <p>{{caption}}</p>
		</div>
		<div class="post_tags">
		  <span style="font-weight: bold;">TAGS</span>
		  {{#each tags}}
		  <span class="tag"><a href="#">{{tag}}</a></span>
		  {{/each}}
		</div>
		<div class="post_interact">
		  <span class="add_button"></span>
		  <span class="like_button"></span>
		  <div class="clear"></div>
		</div>
	  </div>
    </div>
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="/js/renderposts.js"></script>
    <script src="/js/rendertopbar.js"></script>
    <script src="/js/splitbackground.js"></script>
    <script>
      function setSizes() {
        rendertopbar(true);
        renderposts();
      }
      window.resize = setSizes;
      $(document).ready(function() {
        setSizes();
      });
      $(window).load(function() {
        setSizes();
      });
    </script>
  </body>

</html>